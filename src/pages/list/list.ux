<template>
    <div class="page-container">
        <!-- 1. 固定的顶部栏 -->
        <div class="header" onclick="goBack">
            <text class="time-display">{{currentTime}}</text>
            <text class="title">‹ {{ pageTitle }}</text>
        </div>

        <!-- 2. 独立滚动的内容区 -->
        <scroll id="songListScroll" class="scroll-wrapper {{ fullSongList.length > PAGE_SIZE ? 'footer-padding' : '' }}" scroll-y="true" bounces="true" onscrolltop="handleScrollTop">

            <!-- 按钮容器 -->
            <div class="button-container">
                <!-- 普通模式下的按钮 -->
                <div class="action-button play-all" if="{{ (listType === 'downloadlist' || listType === 'personal_fm' || listType === 'daily_recommend') && fullSongList.length > 0 }}" onclick="playAll">
                    <image class="button-icon" src="/common/icon/play-arrow.png"></image>
                    <text class="button-text">{{ listType === 'personal_fm' ? '开启FM' : '播放全部' }}</text>
                </div>
                <div class="button-group" if="{{ listType === 'songlist' && fullSongList.length > 0 }}">
                    <div class="group-button play" onclick="playAll"><image class="button-icon" src="/common/icon/play-arrow.png"></image><text class="button-text dark">播放全部</text></div>
                    <div class="group-button favorite" onclick="addAllToFavorites"><image class="button-icon" src="/common/icon/list-liked.png"></image><text class="button-text dark">添加收藏</text></div>
                </div>
                <div class="action-button clear-list" if="{{ listType === 'playlist' && fullSongList.length > 0 }}" onclick="clearPlaylist">
                    <image class="button-icon" src="/common/icon/delete.png"></image><text class="button-text">清空列表</text>
                </div>
            </div>

            <!-- 列表内容 -->
            <div class="list-content">
                <div for="{{(index, item) in displaySongList}}" class="song-item" onclick="play(item.id)">

                    <div class="item-prefix">
                        <text class="item-index">{{ item.displayIndex }}</text>
                    </div>

                    <div class="song-info">
                        <text class="song-title">{{ item.name }}</text>
                        <text class="song-artist">{{ item.artists }}</text>
                        <div class="song-meta" if="{{item.isDownloaded}}">
                            <text class="download-tag">已下载</text>
                        </div>
                    </div>

                    <!-- 动态功能按钮 -->
                    <div class="action-btn-wrapper" show="{{ listType === 'playlist' || listType === 'favorites' || listType === 'downloadlist' || listType === 'songlist' }}">
                        <!-- 在播放列表或收藏页显示删除按钮 -->
                        <div if="{{ listType === 'playlist' || listType === 'favorites' }}" onclick="deleteSong(item)">
                            <image class="action-btn" src="/common/icon/cancel.png"></image>
                        </div>
                        <!-- 在下载页或歌单页显示添加到下一首按钮 (此功能暂未实现，可作占位) -->
                        <div if="{{ listType === 'downloadlist' || listType === 'songlist' }}" onclick="addSongToNext(item)">
                            <image class="action-btn" src="/common/icon/plus.png"></image>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- 加载与空状态提示 -->
            <text class="loading-tip" if="{{ isLoading }}">正在加载...</text>
            <text class="loading-tip" if="{{ !isLoading && fullSongList.length === 0 }}">列表为空</text>
            <text class="loading-tip" if="{{ !isLoading && fullSongList.length > 0 }}">加载完成</text>
        </scroll>

        <!-- 悬浮的底部翻页操作栏 -->
        <div class="pagination-footer" if="{{ fullSongList.length > PAGE_SIZE }}">
            <text class="item-value-btn {{ currentPage === 1 ? 'item-value-btn-disabled' : '' }}" onclick="loadPrevPage">上一页</text>
            <text class="pagination-text">{{ currentPage }} / {{ totalPages }}</text>
            <text class="item-value-btn {{ currentPage >= totalPages ? 'item-value-btn-disabled' : '' }}" onclick="loadNextPage">下一页</text>
        </div>
    </div>
</template>
