                    </div>
                    <div class="action-button clear-list" if="{{ listType === 'playlist' && fullSongList.length > 0 }}" onclick="clearPlaylist">
                        <image class="button-icon" src="/common/icon/delete.png"></image><text class="button-text">清空列表</text>
                    </div>
                </div>

                <!-- 
                  【核心修改】
                  - "多选"按钮现在是内容的一部分，位于滚动区顶部。
                  - 只在特定列表类型且列表不为空时显示。
                -->
                <div class="header-action-btn-wrapper select-mode-btn" 
                     if="{{ (listType === 'downloadlist' || listType === 'songlist' || listType === 'favorites') && fullSongList.length > 0 && !isMultiSelectMode }}" 
                     onclick="toggleMultiSelectMode">
                    <text class="header-action-btn-text">批量管理</text>
                </div>
            </div>
            
            <!-- 列表内容 -->
            <div class="list-content">
                <div for="{{(index, item) in displaySongList}}" 
                     class="song-item"
                     onclick="handleItemClick(item)">
                    
                    <div class="item-prefix">
                        <text class="item-index">{{ item.displayIndex }}</text>

                    </div>

                    <div class="song-info">
                        <text class="song-title">{{ item.name }}</text>
                        <text class="song-artist">{{ item.artists }}</text>
                        <div class="song-meta" if="{{item.isDownloaded}}">
                            <text class="download-tag">已下载</text>
                        </div>
                    </div>

                    <div class="delete-btn-wrapper" 
                         onclick="deleteSong(item)" 
                          if="{{ !isMultiSelectMode }}"
                         show="{{ (listType === 'downloadlist' || listType === 'favorites') && !isMultiSelectMode }}">
                        <image class="delete-btn" src="{{listType !== 'downloadlist' ? '/common/icon/cancel.png' : '/common/icon/delete.png'}}"></image>
                    </div>
                    <input type="checkbox" 
                    class="song-checkbox" 
                    if="{{ isMultiSelectMode }}"
                    checked="{{ selectedSongIdsMap[item.id] }}"
                    onchange="(e) => handleCheckboxChange(e, item.id)" />
                </div>
            </div>

            <!-- 加载提示 -->
            <text class="loading-tip" if="{{ isLoading }}">正在加载...</text>
            <text class="loading-tip" if="{{ !isLoading && fullSongList.length === 0 }}">列表为空</text>
            <text class="loading-tip" if="{{ !isLoading && !hasMoreDown && fullSongList.length > 0 }}">已加载全部</text>
        </scroll>

        <!-- 【核心修改】底部操作栏现在是绝对定位 -->
        <div class="multi-select-footer" if="{{ isMultiSelectMode }}">
            <text class="footer-text-button download" onclick="downloadSelectedSongs">下载</text>
            <text class="footer-text-button delete" onclick="deleteSelectedSongs">删除</text>
            <text class="footer-text-button cancel" onclick="toggleMultiSelectMode">取消</text>
        </div>
    </div>
</template>
