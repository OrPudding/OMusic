                    <div class="button-group" if="{{ listType === 'songlist' && fullSongList.length > 0 }}">
                        <div class="group-button play" onclick="playAll"><image class="button-icon" src="/common/icon/play.png"></image><text class="button-text dark">播放全部</text></div>
