<template>
    <div class="page-container">
        <!-- 1. 固定的顶部栏 (保持不变) -->
        <div class="header" onclick="goBack">
            <text class="time-display">{{currentTime}}</text>
            <text class="title">‹{{ pageTitle }}</text>
        </div>

        <!-- 2. 独立滚动的内容区 -->
        <scroll id="songListScroll" class="scroll-wrapper" scroll-y="true" bounces="true" 
                onscrolltop="handleScrollTop" 
                onscrollbottom="handleScrollBottom">
            
            <!-- 按钮容器 -->
            <div class="button-container">
                <!-- "播放全部" 等现有按钮 (在多选模式下隐藏) -->
                <div if="{{ !isMultiSelectMode }}">
                    <div class="action-button play-all" if="{{ (listType === 'downloadlist' || listType === 'personal_fm' || listType === 'daily_recommend') && fullSongList.length > 0 }}" onclick="playAll">
                        <image class="button-icon" src="/common/icon/play.png"></image>
                        <text class="button-text">{{ listType === 'personal_fm' ? '开启FM' : '播放全部' }}</text>
